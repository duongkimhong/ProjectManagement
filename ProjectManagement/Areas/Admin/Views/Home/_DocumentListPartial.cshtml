@model IEnumerable<ProjectManagement.Models.Documents>

@foreach (var document in Model)
{
    var lastSlashIndex = document.File.LastIndexOf('_');
    var fileName = document.File.Substring(lastSlashIndex + 1);
    <div class="col-12 py-2 d-flex align-items-center">
        <div class="d-flex ms-3 align-items-center flex-fill">
            <div class="d-flex flex-column ps-3">
                <h6 class="fw-bold mb-0 small-14">@fileName</h6>
            </div>
        </div>
        <a href="@document.File" download>
            <button type="button" class="btn light-danger-bg text-end">Download</button>
        </a>
        <button type="button" style="margin-left: 5px;" class="btn light-danger-bg text-end delete-document-btn" onclick="showDeleteFileModal('@document.Id')">
            <i class="icofont-ui-delete text-danger"></i>
        </button>
    </div>
} 